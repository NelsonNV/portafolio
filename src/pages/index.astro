---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import GithubIcon from '../components/icons/Github.astro'
import CodeIcon from '../components/icons/Code.astro';
import LinkedInIcon from '../components/icons/Linkedin.astro'
import AvatarIcon from '../components/icons/Avatar.astro'
import MailIcon from '../components/icons/Mail.astro'
import BriefcaseIcon from '../components/icons/BriefCase.astro'
import Experience from "../components/Experience.astro"
import SocialPill from '../components/SocialPill.astro'
import SectionContainer from '../components/SectionContainer.astro';
import Projects from "../components/Projects.astro"
import AboutMe from '../components/AboutMe.astro';
---

<Layout title="Portafolio Nelson Navarro - Programador y Desarrollador web"
  description="contrata a Nelson Navarro para el Desarrollo de paginas web o programas de esritorio"
>
<main>
	<section id="home" class="w-full lg:w-[740px] mx-auto py-10">
		<img class="rounded-full size-12 mb-4" src="/me.jpg" alt="MiPhoto">
		<h1 class=" text-black dark:text-white text-5xl font-bold flex flex-row gap-x-4 pb-10"> 
			Hola, Soy Nelson Navarro <a href="https://www.linkedin.com/in/nelson-luis-onofre-navarro-valenzuela-0637611ba/" target="_blank" rel="noopener" class="flex justify-center items-center">
				<Badge>Buscando Practica</Badge>
			</a>
		</h1>
		<h2 class="text-xl opacity-80"> <span>Soy Titulado del DuocUC Centrado en</span><span class="text-yellow-200/90"> Desarrollador web y en Software de escritorio</span>, <span class="text-red-200/90">Soy Chileno</span>. <span class="opacity-75">Me especializo en Back-End</span></h2>
		<nav class="flex gap-x-2 mt-8">
			<SocialPill href="https://www.github.com/NelsonNV"> <GithubIcon class="h-6 w-6"/> Github </SocialPill>
			<SocialPill href="https://www.linkedin.com/in/nelson-luis-onofre-navarro-valenzuela-0637611ba/"> <LinkedInIcon class="h-6 w-6"/> LinkedIn </SocialPill>
			<SocialPill href="mailto:nelsonluisnv2@gmail.com"><MailIcon/> nelsonluisnv2@gmail.com</SocialPill>
		</nav>
	</section>

	<SectionContainer class="pb-5" id="experiencia">
		<h2
		  class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
		  <BriefcaseIcon class="size-7" />
		  Experiencia laboral
		</h2>
		<Experience />
	</SectionContainer>
	<SectionContainer id="proyects">
		<h2
		class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
		<CodeIcon class="size-7" />
		Proyectos
	  </h2>
		<Projects/>
	</SectionContainer>
	<SectionContainer id="about">
		<h2
		class="text-3xl font-semibold mb-6 flex gap-x-3 items-center text-black/80 dark:text-white/80">
		<AvatarIcon class="size-8" />
		Sobre m√≠
	  </h2>
		<AboutMe/>
	</SectionContainer>

</main>
</Layout>
